<div class="w3-container">
<h1>Create a customer</h1>
  <%= form_tag("/customers/create", method: "post", class: "w3-container w3-card") do %>
    <%= text_field_tag('company', nil, placeholder: 'Company Name', class: "w3-input") %>
    <%= text_field_tag('first_name', nil, placeholder: 'First Name', class: "w3-input") %>
    <%= text_field_tag('last_name', nil, placeholder: 'Last Name', class: "w3-input") %>
    <%= text_field_tag('address', nil, placeholder: 'Address', class: "w3-input") %>
    <%= text_field_tag('city', nil, placeholder: 'City', class: "w3-input") %>
    <%= text_field_tag('state', nil, placeholder: 'State', class: "w3-input") %>
    <%= text_field_tag('zip', nil, placeholder: 'Zipcode', class: "w3-input") %>
    <%= text_field_tag('country', nil, placeholder: 'Country', class: "w3-input") %>
    <%= text_field_tag('phone', nil, placeholder: 'Phone Number', class: "w3-input") %>
    <%= text_field_tag('fax', nil, placeholder: 'Fax Number', class: "w3-input") %>
    <%= text_field_tag('website', nil, placeholder: 'Website', class: "w3-input") %>
    <%= number_field_tag('card_number', nil, placeholder: 'Card Number', class: "w3-input") %>
    <%= number_field_tag('card_exp_month', nil, placeholder: 'MM', class: "w3-input") %>
    <%= number_field_tag('card_exp_year', nil, placeholder: 'YYYY', class: "w3-input") %>
    <%= submit_tag("Submit", class: "w3-button w3-teal w3-margin") %>
  <% end %>
</div>
