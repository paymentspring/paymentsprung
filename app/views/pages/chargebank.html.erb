 <div class=w3-container>
  <h1>Charge a bank account</h1>
  <%= form_tag("/charge-bank", method: "post", class: "w3-card w3-container") do %>
    <%= number_field_tag('amount', nil, step: '0.01', placeholder: 'Amount', class: "w3-input") %>
    <%= number_field_tag('bank_account_number', nil, placeholder: 'Account Number', class: "w3-input") %>
    <%= number_field_tag('bank_routing_number', nil, placeholder: 'Routing Number', class: "w3-input") %>
    <%= text_field_tag('first_name', nil, placeholder: 'First Name', class: "w3-input") %>
    <%= text_field_tag('last_name', nil, placeholder: 'Last Name', class: "w3-input") %>
    <%= select_tag('bank_account_type', '<option>Checking</option><option>Savings</option>'.html_safe, class: "w3-select") %>
    <%= submit_tag("Submit", class: "w3-button w3-teal w3-margin") %>
  <% end %>
 </div>