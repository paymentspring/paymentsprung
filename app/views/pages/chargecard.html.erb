<%= form_tag("/charge-card", method: "post") do %>
  <%= number_field_tag('amount', nil, step: '0.01', placeholder: 'Amount') %>
  <%= text_field_tag('card_holder', nil, placeholder: 'Name') %>
  <%= number_field_tag('card_number', nil, placeholder: 'Card Number') %>
  <%= number_field_tag('csc', nil, placeholder: 'CSC') %>
  <%= number_field_tag('exp_month', nil, placeholder: 'MM')%>
  <%= number_field_tag('exp_year', nil, placeholder: 'YYYY')%>
  <%= submit_tag("Submit") %>
<% end %>